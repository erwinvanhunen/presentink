{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PresentInk",
  "version": "0.9.12",
  "identifier": "com.presentink",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "PresentInk",
        "width": 800,
        "height": 600,
        "fullscreen": false,
        "maximized": true,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "plugins": {
    "globalShortcut": {
      "allowRegister": true,
      "allowUnregisterAll": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/presentink.icns"
    ],
    "macOS": {
      "signingIdentity": "ERWIN RAYMOND VAN HUNEN (5LR35AYAWP)",
      "entitlements": "./Entitlements.plist"
    }
  }
}