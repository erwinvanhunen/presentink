{
  "name": "presentink",
  "version": "0.9.10",
  "main": "dist/main.js",
  "icon": "icon.icns",
  "scripts": {
    "clean": "rm -rf dist",
    "start": "webpack && electron .",
    "pack": "electron-builder --dir",
    "predist": "pwsh -ExecutionPolicy Bypass -File ./copyversion.ps1",
    "dist": "rm -rf dist && webpack && electron-builder --mac --arm64",
    "build": "webpack"
  },
  "keywords": [],
  "author": "Erwin van Hunen",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "copy-webpack-plugin": "^13.0.0",
    "electron": "^36.3.2",
    "electron-builder": "^26.0.12",
    "source-map-loader": "^5.0.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1"
  },
  "build": {
    "appId": "com.erwinmcm.presentink",
    "productName": "PresentInk",
    "directories": {
      "output": "built",
      "app": "dist"
    },
    "extraFiles": [
      "KeyTyper"
    ],
    "asar": true,
    "mac": {
      "compression": "normal",
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "entitlements": "entitlements.plist",
      "entitlementsInherit": "entitlements.plist",
      "notarize": true,
      "target": {
        "target": "default",
        "arch": [
          "arm64"
        ]
      },
      "type": "distribution",
      "extendInfo": {
        "LSUIElement": true
      },
      "gatekeeperAssess": true
    },
    "dmg": {
      "contents": [
        {
          "x": 440,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 102,
          "y": 175,
          "type": "file"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      },
      "background": "dmgbackground.png"
    }
  }
}